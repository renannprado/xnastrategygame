<Window x:Class="StrategyGame.Screens.SelectedBuildingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Building" Height="300" Width="625" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <Image Height="100" Width="100"  HorizontalAlignment="Left" Margin="491,12,0,0" Name="imgBuilding" Stretch="Fill" VerticalAlignment="Top" />

        <ListBox BorderBrush="DarkBlue" BorderThickness="3" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Hidden" HorizontalAlignment="Center" Margin="12,0,427,12" Name="lsbBuildings" Width="164" Height="237" VerticalAlignment="Bottom">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

    </Grid>
</Window>
