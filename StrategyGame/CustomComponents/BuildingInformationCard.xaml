<UserControl x:Class="StrategyGame.CustomComponents.BuildingInformationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="431" Height="115" BorderBrush="AliceBlue" BorderThickness="3">
    <Grid>
        <Image Height="91" HorizontalAlignment="Left" Name="imgBuilding" Stretch="Fill" VerticalAlignment="Center" Width="91" Margin="12,12,0,12" />
        <Label Content="[energyIcon]/turn:" HorizontalAlignment="Left" Margin="109,12,0,0" Name="label1" Width="107" FontSize="10" Height="25" VerticalAlignment="Top" />
        <Label Content="value energy" Height="25" HorizontalAlignment="Left" Margin="109,35,0,0" Name="label2" VerticalAlignment="Top" Width="107" FontSize="10" />
        <Label Content="[waterIcon]/turn:" Height="25" HorizontalAlignment="Left" Margin="109,58,0,0" Name="label3" VerticalAlignment="Top" Width="107" FontSize="10" />
        <Label Content="value water" Height="25" HorizontalAlignment="Left" Margin="109,81,0,0" Name="label4" VerticalAlignment="Top" Width="107" FontSize="10" />
    </Grid>
</UserControl>
