<UserControl x:Class="StrategyGame.CustomComponents.BuildingCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="200" Height="80">
    <Grid Height="75" Name="grdBuildingCard" Width="200">
        <Image Width="60" HorizontalAlignment="Left" Margin="10,10,0,10" Name="imgBuilding" Stretch="Fill" VerticalAlignment="Center" Height="60" />
        <Label Foreground="Black" Content="Building Name" Margin="0,25,10,25" Name="lblBuildingName" VerticalAlignment="Center" HorizontalAlignment="Right" Width="110" />
    </Grid>
</UserControl>
